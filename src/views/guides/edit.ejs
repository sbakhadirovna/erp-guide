<h3>Edit your data</h3>
<form action="/guides/<%= guide.id %>/edit" method="post">
    <div class="mb-3">
        <label>Title</label>
        <input type="text" name="title" class="form-control" value="<%= guide.title %>" required>
    </div>
    <div class="mb-3">
        <label>Content</label>
        <textarea name="content" class="form-control" rows="10" required><%= guide.content%></textarea>
    </div>
    <div class="form-group mt-3">
        <label>send all </label>
        <select name="notify" class="form-select w-25">
            <option value="true">Yes</option>
            <option value="false" selected>No</option>
        </select>
    </div>
    <button class="mt-3 btn btn-primary">Submit</button>
</form>