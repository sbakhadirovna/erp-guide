<h3>Create Guide</h3>

<div class="col-md-6">
<form action="/guides/create" method="post">
  <div class="form-group mt-3">
    <label class="form-label" for="title">Title</label>
    <input type="text" name="title" class="form-control" id="title" />
  </div>
  <div class="form-group mt-3">
    <label class="form-label" for="area">Content</label>
    <textarea class="form-control" rows="3" name="content"id=area ></textarea>
  </div>
  <div class="form-group mt-3">
    <label class="form-label" for="select">select all </label>
    <select name="notify" class="form-select" id="select">
      <option value="true">Yes</option>
      <option value="false" selected>No</option>
    </select>
  </div>
  <button class="btn btn-primary mt-3" type="submit">Add</button>
</form>
</div>