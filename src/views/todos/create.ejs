
   <h3>Create todo</h3>
   <div class="col-md-6">
   <form action="/todos/create" method="post">
       <div class="form-group mt-3 d-flex align-items-center">
           <label  class="form-label mx-3" for="whom">To Whom</label>
           <select name="user_id" class="form-select"id="whom">
            <% users.forEach(user => { %>
             <option value="<%= user.id %>">
                <%= `${user.firstName} ${user.lastName}` %>
            </option>
            <% }) %>
         </select>
       </div>
       <div class="form-group mt-3 d-flex align-items-center">
           <label class="form-label mx-3 " for="select" >Which message</label>
           <select name="guide_id" class="form-select" id="select" >
            <% guides.forEach(guide => { %>
             <option value="<%= guide.id %>">
                <%= guide.title %>
            </option>
            <% }) %>
           </select>
         </div>
        
         <button class="btn btn-primary mt-3" type="submit">Send message</button>
   </form>
</div>






 