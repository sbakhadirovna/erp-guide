<div class="container mt-5">
    <div class="col-md-4">
    <% if (currentUser.Role == 'admin') { %>
        <div class="card mb-3">
            <div class="card-body">
                <h3 class="text-center"><%= `${todo.user.firstName} ${todo.user.lastName}` %></h3>
    <% } %>

            <h4 class="card-title text-center"><%= todo.guide.title %></h4>
            <p class="card-text text-center"><%= todo.guide.content %></p>
            <hr>
            <form action="/todos/<%= todo.id %>/complete" method="post">
                <button type="submit" class="btn btn-primary" <%= todo.completed ? "disabled" : "" %>>
                    <%= todo.completed ? "Read" : "Unread" %>
                </button>
            </form>
        </div>
    </div>
</div>
</div>